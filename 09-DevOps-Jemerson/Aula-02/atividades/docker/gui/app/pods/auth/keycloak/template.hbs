{{#if (is-equal model.mode "login")}}
    <div class="sso-box">
        <p>{{localize 'login_keycloak'}}</p>
        <img src="/assets/img/busy-gray.gif">
    </div>
{{/if}}

{{#if (is-equal model.mode "reject")}}
    <div class="sso-box">
        <p>{{localize 'login_keycloak_error'}}</p>
        <p>{{model.message}}</p>
    </div>
{{/if}}
